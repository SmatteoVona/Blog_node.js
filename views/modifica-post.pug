extends layout

block head
  link(rel="stylesheet", href="/styles/modifica_post.css")

block content

    form(action='/admin/modifica/' + post.id, method='POST', enctype='multipart/form-data')
      label(for='title') Titolo:
      input(type='text', id='title', name='title', required, value=post.title)
      br
      label(for='content') Contenuto:
      textarea(id='content', name='content', required)= post.content
      br
      label(for='image') Immagine:
      input(type='file', id='image', name='image')
      br
      input(type='submit', value='Invia')
